<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="android:textSize">16sp</item>
    </style>o

    <style name="class_race_image_btn">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">@color/backgroundColor</item>
    </style>

    <style name="class_race_next_back_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:minHeight">35dp</item>
    </style>

    <style name="class_race_details">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:minHeight">30dp</item>
    </style>

    <style name="HeaderText">
        <item name="android:layout_width"> wrap_content </item>
        <item name="android:layout_height"> wrap_content </item>
        <item name="android:textColor"> @color/black </item>
        <item name="android:textSize"> 30sp </item>
        <item name="android:fontFamily"> sans-serif-light </item>
    </style>

    <style name="CurrencyText">
        <item name="android:layout_width"> wrap_content </item>
        <item name="android:layout_height"> wrap_content </item>
        <item name="android:textColor"> @color/black </item>
        <item name="android:textSize"> 40sp </item>
        <item name="android:fontFamily"> sans-serif-light </item>
        <item name="android:autoSizeTextType"> uniform </item>
    </style>

    <style name="TitleTheme" parent="android:Theme.Material.Light.NoActionBar.Fullscreen">
        <item name="android:background">@color/beige</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
